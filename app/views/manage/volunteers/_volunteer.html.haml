.col-6.col-sm-6.col-md-4.col-lg-3.col-xl-3.col-xxl-2
  .card.mb-4
    - if volunteer.picture.representable?
      = image_tag volunteer.picture.representation( resize_to_limit: [300, 300]), class: 'card-img-top'
    - else
      = image_tag 'volunteer.png', class: 'card-img-top'
    .card-body
      %h6.card-title.row.align-items-center
        .col-6= link_to volunteer.chosen_name, [:manage, volunteer]
        .col-6.text-end
          %button.btn.btn-link.p-0{"data-bs-target" => "##{dom_id(volunteer)}", "data-bs-toggle" => "modal", type: "button"}
            = fa_icon('comment')
      .since
        %b Since:
        = l(volunteer.joined_on) if volunteer.joined_on
      .skills
        %b Skills:
        = volunteer.skills.map{|skill| skill.name}.join(', ')
      .favorites
        %b Favorites:
        = volunteer.products.map{|fav| fav.name}.join(', ')

    .card-footer
      #{volunteer.city}, #{volunteer.state}

  .modal.fade{ "id" => dom_id(volunteer), "aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", tabindex: "-1"}
    .modal-dialog
      .modal-content
        .modal-header
          %h5#exampleModalLabel.modal-title
            =volunteer.chosen_name
          %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", type: "button"}
        .modal-body
          = volunteer.description
        .modal-footer
          %button.btn.btn-secondary{"data-bs-dismiss" => "modal", type: "button"} Close