= form_tag manage_volunteers_path, :method => :get do
  .row.mb-0
    .col
      = label_tag :search, "Search", class: 'label'
    .col
      = label_tag :search, "Skill", class: 'label'
    .col
      = label_tag :search, "Product", class: 'label'
    .col
      = label_tag :search, "State", class: 'label'
    .col
  .row.mb-4
    .col
      = text_field_tag :search, params[:search], class: 'form-control'
    .col
      = select_tag :skill_id, options_from_collection_for_select(Skill.all, "id", "name", params[:skill_id]), include_blank: true, class: 'form-select'
    .col
      = select_tag :product_id, options_from_collection_for_select(Product.all, "id", "name", params[:product_id]), include_blank: true, class: 'form-select'
    .col
      = select_tag :state, options_for_select(Volunteer.where.not(state: "").order(:state).pluck(:state).uniq, params[:state]), include_blank: true, class: 'form-select'
    .col
      = submit_tag "Search", name: nil, class: 'btn btn-primary'