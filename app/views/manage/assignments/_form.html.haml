= form_with model: @assignment, url: [ :manage, @project, :assignments ], html: { class: 'form', data: { turbo: false } } do |form|
  = render "error_messages", resource: @assignment
  .row
    .col-4
      = form.label 'Assign a Volunteer', class: 'form-label required'
      = form.select :volunteer_id, Volunteer.approved.collect {|v| [ v.name, v.id ] }, { include_blank: true }, { class: 'form-select' }
  .form-actions
    = form.submit 'Assign Project', class: "btn btn-primary"