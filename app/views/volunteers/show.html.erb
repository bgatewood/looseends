<%= render 'title', title: 'Volunteer' %>
<% if @volunteer %>

  <%= link_to 'Edit', [:edit, :volunteer] %>
  <% if @volunteer.picture.representable? %>
    <%= image_tag @volunteer.picture.representation( resize_to_limit: [200, 200]) %>
  <% end %>


  <h3>About me</h3>

  <p><%= @volunteer.name %></p>

  <p><%= @volunteer.description %></p>
  <hr>
  <p><%= @volunteer.street %></p>
  <p><%= @volunteer.street_2 %></p>
  <p><%= @volunteer.city %></p>
  <p><%= @volunteer.state %></p>
  <p><%= @volunteer.postal_code %></p>
  <p><%= @volunteer.country %></p>
  <hr>
  <h3>Favorites</h3>
  <ul>
    <% @volunteer.favorites.each do |favorite| %>
      <li><%= favorite.product.name %></li>
    <% end %>
  </ul>

  <hr>
  <h3>Skills</h3>
  <ul>
    <% @volunteer.assessments.each do |assessment| %>
      <li><%= assessment.skill.name %>: <%= assessment.rating %> (<%= assessment.description %>)</li>
    <% end %>
  </ul>

  <hr>
<% else %>
  <h3>Would you like to volunteer?</h3>
  <p>
    We would love you to join!  Please confirm by filling out the <%= link_to 'Volunteer Questionnaire', [:new, :volunteer] %>.
  </p>
<% end %>