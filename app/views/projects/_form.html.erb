<%= form_with model: @project, class: 'my-16', data: { turbo: false } do |form| %>
  <%= render "error_messages", resource: @project %>

  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3">
      <%= form.label 'Name of Project', class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= form.text_field :name, class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-last-name' %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3">
      <%= form.label 'Description', class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= form.text_area :description, size: "60x5", class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-last-name' %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3">
      <%= form.label 'Project Images', class: 'block text-gray-700 text-sm font-bold mb-1' %>
      <p class="text-gray-600 text-xs my-1">Please upload photos of the unfinished project.</p>

      <%= form.file_field :project_images, class: 'appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-last-name', :multiple => true %>
      <% form.object.project_images.each do |image| %>
        <%= image_tag image.representation( resize_to_limit: [100, 100]) %>
      <% end %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3">
      <%= form.label 'Pattern Images', class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <p class="text-gray-600 text-xs my-1">Please upload photos of the pattern, if you have them.  </p>
      <%= form.file_field :pattern_images, class: 'appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-last-name', :multiple => true %>
      <% form.object.pattern_images.each do |image| %>
        <%= image_tag image.representation( resize_to_limit: [100, 100]) %>
      <% end %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3">
      <%= form.label 'Material Images', class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <p class="text-gray-600 text-xs my-1">Please upload photos of the materials, if you have them.</p>
      <%= form.file_field :material_images, class: 'appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-last-name', :multiple => true %>
      <% form.object.material_images.each do |image| %>
        <%= image_tag image.representation( resize_to_limit: [100, 100]) %>
      <% end %>
    </div>

  </div>
  <p class="text-gray-600 text-xs my-1">
    By clicking below, you recognize that Loose Ends is not responsible for lost or damaged projects or materials.
  </p>
  <%= form.submit class: "shadow bg-blue-500 hover:bg-blue-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
<% end %>