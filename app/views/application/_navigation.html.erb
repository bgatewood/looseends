<div class="container px-5 mx-auto mt-4 mb-4">
  <div class="flex">

    <ul class="flex mr-auto">
      <li class="mr-6">
        <%= link_to 'Loose Ends', root_path, class: "text-blue-500 hover:text-blue-800" %>
      </li>
      <% if current_user %>
        <li class="mr-6">
          <%= link_to 'My Projects', projects_path, class: "text-blue-500 hover:text-blue-800" %>
        </li>
        <li class="mr-6">
          <%= link_to 'Volunteer', volunteer_path, class: "text-blue-500 hover:text-blue-800" %>
        </li>
      <% end %>
      <% if current_user&.can_manage? %>
        <li class="mr-6">
          <%= link_to 'Manage', manage_dashboard_path, class: "text-blue-500 hover:text-blue-800" %>
        </li>
      <% end  %>
      <% if current_user&.admin? %>
        <li class="mr-6">
          <%= link_to 'Admin', admin_dashboard_path, class: "text-blue-500 hover:text-blue-800" %>
        </li>
      <% end  %>
    </ul>
    <ul class="flex ml-auto">
      <% if user_signed_in? %>
        <li class="mr-6">
          <%= link_to 'Settings', edit_user_registration_path, class: "text-blue-500 hover:text-blue-800" %>
        </li>
        <li class="mr-6">
          <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: 'nav-link' %>
        </li>
      <% else %>
        <li class="mr-6">
          <%= link_to "Log In", new_user_session_path, class: 'nav-link' %>
        </li>
        <li class="mr-6">
          <%= link_to "Sign Up", new_user_registration_path, class: 'nav-link' %>
        </li>
      <% end  %>
    </ul>
  </div>
</div>