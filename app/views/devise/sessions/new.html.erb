<h1 class="page-title">Sign in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>

  <div class="form-group">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-input' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %> Remember me
      <% end %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn-submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
