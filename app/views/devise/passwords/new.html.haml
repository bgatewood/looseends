%h1.page-title Forgot your password?
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  = render "error_messages", resource: resource
  .form-group
    = f.label :email, class: 'form-label'
    = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input w-2/3 md:w-1/2'
  .actions
    = f.submit "Send reset password instructions", class: "btn-submit"
