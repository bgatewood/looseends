%h1.page-title Forgot your password?
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f|
  = render "error_messages", resource: resource
  .row.my-3
    = f.label :email, class: 'col-form-label col-sm-2'
    .col-sm-4
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'
  .row.form-actions
    .col.offset-2
      = f.submit "Send reset password instructions", class: "btn btn-primary"
