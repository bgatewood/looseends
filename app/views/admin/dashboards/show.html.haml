= render 'title', title: 'Dashboard'
.layout
  .layout-aside.mr-6
    %h3.page-section Lists
    %p
      = link_to 'Products', admin_products_path
      (#{Product.count})
    %p
      = link_to 'Skills', admin_skills_path
      (#{Skill.count})
  .layout-details
    %h3.page-section Queues
    .page-section
      = link_to 'Volunteers', admin_volunteers_path
      %div
        Count: #{Volunteer.count}
      %div
        Approved: #{Volunteer.approved.count}
    .page-section
      = link_to 'Projects', admin_projects_path
      %div
        Proposed: #{Project.proposed.count}
      %div
        Approved: #{Project.approved.count}
      %div
        In Progress: #{Project.in_progress.count}
      %div
        Finished: #{Project.finished.count}
    .page-section
      = link_to 'Users', admin_users_path
      (#{User.count})
